<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MVVMFrameworkDotNet9.ViewModels"
             x:Class="MVVMFrameworkDotNet9.Views.DemoView"
             x:DataType="viewModels:DemoViewModel"
             Title="DemoView">
    <Grid RowDefinitions="*,Auto"
          Padding="24">
        <Label Text="{Binding DemoString}" Grid.Row="0"
               HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Text="Click me" Command="{Binding TestMethodCommand}" Grid.Row="1"/>
        <BoxView Grid.RowSpan="2"
                 BackgroundColor="Black"
                 Opacity="0.4"
                 IsVisible="{Binding IsBusy}" />
        <ActivityIndicator Grid.RowSpan="2"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Color="{DynamicResource Primary}" />
    </Grid>
</ContentPage>